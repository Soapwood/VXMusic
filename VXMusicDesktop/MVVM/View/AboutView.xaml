<UserControl x:Class="VXMusicDesktop.MVVM.View.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VXMusicDesktop.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#D2CAC5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- First TextBlock -->
            <RowDefinition Height="Auto"/>
            <!-- Second TextBlock -->
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            VerticalAlignment="Center"
            TextAlignment="Center"
            FontFamily="/Fonts/#Brushstrike"
            FontSize="80">
            VXMusic
        </TextBlock>

        <TextBlock
            Grid.Row="1"
            VerticalAlignment="Center"
            TextAlignment="Center"
            FontSize="20">
            <Hyperlink NavigateUri="https://github.com/Soapwood/VXMusic" Click="Url_Click" TargetName="_blank">
                <Run Text="Github"/>
            </Hyperlink>
            <LineBreak/>
            <Hyperlink NavigateUri="https://discord.gg/dZc7dJx6WY" Click="Url_Click" TargetName="_blank">
                <Run Text="Discord"/>
            </Hyperlink>
            <LineBreak/><LineBreak/>
            © Soapwood 2023
        </TextBlock>
    </Grid>
</UserControl>
