<UserControl x:Class="VXMusicDesktop.MVVM.View.ConnectionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VXMusicDesktop.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="FloralWhite">
    <StackPanel>
        <TextBlock Text=""
                   Foreground="Black"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,10"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">


            <Border Width="300"
                    Height="200"
                    CornerRadius="10"
                    Margin="20,0,0,0">
                <Grid>
                    <StackPanel>
                        <Image Height="80"
                       Source="/Images/Spotify_Logo_RGB_Green.png"
                       RenderTransformOrigin="0,0"
                       Margin="0,30,0,0"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Link VXMusic to Spotify"
                            Foreground="Black"
                            FontSize="18"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"/>

                        <TextBlock Text="Automatically add recognised songs to playlists!"
                            Foreground="Black"
                            FontSize="12"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!--<StackPanel>
                    <TextBlock Text="Version: 0.1"
                            Foreground="Black"
                            FontSize="18"
                            Margin="20,10,10,0"
                            HorizontalAlignment="Center"/>
                    <TextBlock Text="- Added Shazam API Support&#x0a;- Added Spotify Integration&#x0a;- Added WIP Desktop Client"
                                   Foreground="Black"
                                   FontSize="12"
                                   Margin="10,20,0,0"
                                   HorizontalAlignment="Left"/>
                </StackPanel>-->
            </Border>
            <Button 
                Content="Link Spotify" 
                Command="{Binding LinkSpotifyButtonClick}"
                IsEnabled="True"
                Padding="0"
                Margin="30"
                HorizontalAlignment="Right" Width="300" Height="100"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">


            <Border Width="300"
                    Height="200"
                    CornerRadius="10"
                    Margin="20,0,0,0">
                <Grid>
                    <StackPanel>
                        <Image Height="60"
                       Source="/Images/LastfmLogo.png"
                       RenderTransformOrigin="0,0"
                       Margin="0,30,0,0"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Link VXMusic to Last.fm"
                            Foreground="Black"
                            FontSize="18"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"/>

                        <TextBlock Text="Scrobble recognised songs!"
                            Foreground="Black"
                            FontSize="12"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                </Grid>

                <!--<StackPanel>
                    <TextBlock Text="Version: 0.1"
                            Foreground="Black"
                            FontSize="18"
                            Margin="20,10,10,0"
                            HorizontalAlignment="Center"/>
                    <TextBlock Text="- Added Shazam API Support&#x0a;- Added Spotify Integration&#x0a;- Added WIP Desktop Client"
                                   Foreground="Black"
                                   FontSize="12"
                                   Margin="10,20,0,0"
                                   HorizontalAlignment="Left"/>
                </StackPanel>-->
            </Border>

            <Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Width="250"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     Grid.Row="0"
                     Text="Username"
                     DataContext="fesfs"
                     Style="{StaticResource ModernTextBox}" Margin="0,50,0,0"/>
                    
                    <TextBox Width="250"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     Grid.Row="1"
                     Text="Password"
                     Style="{StaticResource ModernTextBox}" Margin="0,-50,0,0"/>
                </Grid>
            </Border>

            <Border>
               <Button 
                Content="Login" 
                Command="{Binding LinkLastfmButtonClick}"
                IsEnabled="True"
                Padding="0"
                Margin="00"
                HorizontalAlignment="Left" Width="100" Height="100" />
            </Border>
            

        </StackPanel>

        <StackPanel>
            <!--<Button 
                Content="Link Spotify" 
                Command="{Binding LinkSpotifyButtonClick}"
                IsEnabled="True"
                Padding="0"
                Margin="40"
                HorizontalAlignment="Center" Width="600" Height="100" Click="Button_Click"/>-->
        </StackPanel>
    </StackPanel>

</UserControl>
