<UserControl x:Class="VXMusicDesktop.MVVM.View.NotificationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VXMusicDesktop.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="FloralWhite">
    
    <StackPanel>
        <TextBlock Text=""
                   Foreground="Black"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,10"/>
        
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">


            <Border Width="300"
                    Height="200"
                    CornerRadius="10"
                    Margin="20,0,0,0">
                <Grid>
                    <StackPanel>
                        <Image Height="80"
                       Source="/Images/SteamVRLogo.png"
                       RenderTransformOrigin="0,0"
                       Margin="0,30,0,0"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Use SteamVR for Notifications"
                            Foreground="Black"
                            FontSize="18"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!--<StackPanel>
                    <TextBlock Text="Version: 0.1"
                            Foreground="Black"
                            FontSize="18"
                            Margin="20,10,10,0"
                            HorizontalAlignment="Center"/>
                    <TextBlock Text="- Added Shazam API Support&#x0a;- Added Spotify Integration&#x0a;- Added WIP Desktop Client"
                                   Foreground="Black"
                                   FontSize="12"
                                   Margin="10,20,0,0"
                                   HorizontalAlignment="Left"/>
                </StackPanel>-->
            </Border>
            <Button 
                    Height="80"
                    Width="300"
                    Foreground="Black"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Command="{Binding SteamVREnableButtonClick}"
                    Content="Enable"
                    Margin="20,0,0,0"
                    IsEnabled="{Binding IsXSOverlayNotificationServiceEnabled}" Click="Button_Click_1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="40"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShazamApi}" Value="true">
                                <Setter Property="Content" Value="Active"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ShazamApi}" Value="false">
                                <Setter Property="Content" Value="Inactive"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">


            <Border Width="300"
                    Height="200"
                    CornerRadius="10"
                    Margin="20,0,0,0">
                <Grid>
                    <StackPanel>
                        <Image Height="60"
                       Source="/Images/XSOverlayLogo.jpg"
                       RenderTransformOrigin="0,0"
                       Margin="0,30,0,0"
                               HorizontalAlignment="Center"/>
                       
                        <TextBlock Text="Use XSOverlay for Notifications"
                            Foreground="Black"
                            FontSize="18"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"/>

                    </StackPanel>

                </Grid>

                <!--<StackPanel>
                    <TextBlock Text="Version: 0.1"
                            Foreground="Black"
                            FontSize="18"
                            Margin="20,10,10,0"
                            HorizontalAlignment="Center"/>
                    <TextBlock Text="- Added Shazam API Support&#x0a;- Added Spotify Integration&#x0a;- Added WIP Desktop Client"
                                   Foreground="Black"
                                   FontSize="12"
                                   Margin="10,20,0,0"
                                   HorizontalAlignment="Left"/>
                </StackPanel>-->
            </Border>

            <Button 
                    Height="80"
                    Width="300"
                    Foreground="Black"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Command="{Binding XSOverlayEnableButtonClick}"
                    Content="Enable"
                    Margin="20,0,0,0"
                    IsEnabled="{Binding IsSteamVRNotificationServiceEnabled}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="40"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShazamApi}" Value="true">
                                <Setter Property="Content" Value="Active"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ShazamApi}" Value="false">
                                <Setter Property="Content" Value="Inactive"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>


        </StackPanel>
    </StackPanel>

</UserControl>
