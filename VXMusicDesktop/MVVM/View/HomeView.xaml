<UserControl x:Class="VXMusicDesktop.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VXMusicDesktop.MVVM.View"
             xmlns:custom="clr-namespace:VXMusicDesktop.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <SolidColorBrush x:Key="PrimaryColor" Color="{Binding Source={x:Static custom:ColourSchemeManager.PrimaryColour}, Path=Color}" />
        <SolidColorBrush x:Key="SecondaryColor" Color="{Binding Source={x:Static custom:ColourSchemeManager.SecondaryColour}, Path=Color}" />
        <SolidColorBrush x:Key="Accent1Colour" Color="{Binding Source={x:Static custom:ColourSchemeManager.Accent1Colour}, Path=Color}" />
        <SolidColorBrush x:Key="Accent2Colour" Color="{Binding Source={x:Static custom:ColourSchemeManager.Accent2Colour}, Path=Color}" />
        <SolidColorBrush x:Key="TextBasic" Color="{Binding Source={x:Static custom:ColourSchemeManager.TextBasic}, Path=Color}" />

        <custom:SolidColorBrushToColorConverter x:Key="SolidColorBrushToColorConverter" />

    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Home"
                   Foreground="{StaticResource TextBasic}"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Border Width="400"
                    Height="200">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Offset="0.0">
                            <GradientStop.Color>
                                <Binding Source="{StaticResource SecondaryColor}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                            </GradientStop.Color>
                        </GradientStop>

                        <GradientStop Offset="0.4">
                            <GradientStop.Color>
                                <Binding Source="{StaticResource Accent1Colour}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                            </GradientStop.Color>
                        </GradientStop>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Virtual Xtension Music"
                                   Foreground="{StaticResource TextBasic}"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>

                        <TextBlock Text="Music Companion for Social VR."
                                   Foreground="{StaticResource TextBasic}"
                                   FontSize="18"
                                   Margin="20,10,10,0"/>

                        <Image Width="222"
                       Height="215"
                       Source="/Images/gaben.jpg"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom" Margin="0,0,-90,-75" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-12.179"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Width="200"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Offset="0.0">
                            <GradientStop.Color>
                                <Binding Source="{StaticResource SecondaryColor}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                            </GradientStop.Color>
                        </GradientStop>

                        <GradientStop Offset="0.4">
                            <GradientStop.Color>
                                <Binding Source="{StaticResource Accent1Colour}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                            </GradientStop.Color>
                        </GradientStop>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="Version: 0.2"
                            Foreground="{StaticResource TextBasic}"
                            FontSize="18"
                            Margin="20,10,10,0"
                            HorizontalAlignment="Center"/>
                    <TextBlock Text="- Added Spotify Playlist Support&#x0a;- Added Last.fm Integration&#x0a;- Logging and DI Structure"
                                   Foreground="{StaticResource TextBasic}"
                                   FontSize="12"
                                   Margin="10,20,0,0"
                                   HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Integrations"
                   Foreground="{StaticResource TextBasic}"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource SecondaryColor}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>

                            <GradientStop Offset="0.4">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource Accent1Colour}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Recognition API"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Center"
                                       Grid.Row="0"/>
                            <TextBlock Text="Shazam"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="1"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/GreenDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,3"
                                   Grid.Row="1">
                            </Image>
                            <TextBlock Text="AudD"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="2"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/RedDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,5"
                                   Grid.Row="2">
                            </Image>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Width="150"
                        Height="150"
                        CornerRadius="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource SecondaryColor}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>

                            <GradientStop Offset="0.4">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource Accent1Colour}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Notification Service"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Center"
                                       Grid.Row="0"/>
                            <TextBlock Text="SteamVR"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="1"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/RedDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,3"
                                   Grid.Row="1">
                            </Image>
                            <TextBlock Text="XSOverlay"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="2"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/GreenDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,5"
                                   Grid.Row="2">
                            </Image>
                        </Grid>
                    </StackPanel>

                </Border>

                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource SecondaryColor}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>

                            <GradientStop Offset="0.4">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource Accent1Colour}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Connections"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Center"
                                       Grid.Row="0"/>
                            <TextBlock Text="Spotify"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="1"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/GreenDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,3"
                                   Grid.Row="1">
                            </Image>
                            <TextBlock Text="Last.fm"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="2"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/RedDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,5"
                                   Grid.Row="2">
                            </Image>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource SecondaryColor}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>

                            <GradientStop Offset="0.4">
                                <GradientStop.Color>
                                    <Binding Source="{StaticResource Accent1Colour}" Converter="{StaticResource SolidColorBrushToColorConverter}"/>
                                </GradientStop.Color>
                            </GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Connected Game Clients"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Center"
                                       Grid.Row="0"/>
                            <TextBlock Text="VRChat"
                                       Foreground="{StaticResource TextBasic}"
                                       FontSize="12"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Left"
                                       Grid.Row="1"/>
                            <Image Width="10"
                               Height="10"
                               Source="/Images/GreenDot.png"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="72,0,0,3"
                                   Grid.Row="1">
                            </Image>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>

        </StackPanel>

    </StackPanel>
</UserControl>
